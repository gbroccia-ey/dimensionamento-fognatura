<!-- Generated template for the Lavfat1100AcquaComponent component -->
<div>
 <ion-slides>

    <!-- 0 -->
    <ion-slide>
      <ion-grid>
        <ion-row>
            <ion-col col-6>
                <ion-label>Istruttoria</ion-label>
            </ion-col>
            <ion-col col-6>
                <ion-checkbox class="checkInTable" color="dark" [(ngModel)]="preventivo.Istruttoria" (ionChange)="setIstruttoria()"></ion-checkbox>
            </ion-col>
        </ion-row>
        <ion-row>
            <ion-col col-12>
              <button class="btn_preventivatore" ion-button color="danger" (click)="reset()">Reset</button> 
              <button class="btn_preventivatore" ion-button (click)="preventivo.Istruttoria ? goToSlide(3) : goToSlide(1)">Avanti</button> 
            </ion-col>
        </ion-row>
      </ion-grid>
    </ion-slide>

    <!-- 1 -->
    <ion-slide>
      <ion-grid>
        <ion-row>
            <ion-col col-6>
                <ion-label>Rifacimento</ion-label>
            </ion-col>
            <ion-col col-6>
                <ion-checkbox class="checkInTable" color="dark" checked="false" [(ngModel)]="preventivo.Rifacimento" ></ion-checkbox>
            </ion-col>
        </ion-row>
        <ion-row>
            <ion-col col-12>
              <button class="btn_preventivatore" ion-button color="danger" (click)="reset()">Reset</button> 
              <button class="btn_preventivatore" ion-button (click)="goToSlide(2)">Avanti</button> 
            </ion-col>
        </ion-row>
      </ion-grid>
    </ion-slide>

    <!-- 2 -->
    <ion-slide>
      <ion-grid>
        <ion-row>
          <ion-col col-4>
              <ion-label>Calibro Contatore</ion-label>
          </ion-col>
          <ion-col col-8>
              <ion-select [(ngModel)]="preventivo.ClasseContatore">
                  <ion-option *ngFor="let c of valori" [value]="c.classeContatore">{{ c.label }}</ion-option>
              </ion-select>
          </ion-col>
        </ion-row>

        <ion-row>
            <ion-col col-12>
              <button class="btn_preventivatore" ion-button color="danger" (click)="reset()">Reset</button> 
              <button class="btn_preventivatore" ion-button (click)="goToSlide(3)">Avanti</button> 
            </ion-col>
        </ion-row>

      </ion-grid>
    </ion-slide>

     <!-- 3 -->
    <ion-slide>
      <ion-grid>
        <ion-row>
          <ion-col col-4>
            <ion-label>Quota Istruttoria</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]= "preventivo.QuotaIstruttoria" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
          </ion-col>
        </ion-row>

        <ion-row>
          <ion-col col-4>
            <ion-label>Quota Fissa</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]="preventivo.QuotaFissa" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
          </ion-col>
        </ion-row>

        <ion-row>
          <ion-col col-4>
            <ion-label>Quota Contatore</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]= "preventivo.QuotaContatore" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
          </ion-col>
        </ion-row>

        <!--  <ion-row>
          <ion-col col-4>
              <ion-label>Cop</ion-label>
          </ion-col>
          <ion-col col-8>
              <ion-input type="number" [(ngModel)]="preventivo.Cop" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
              <calcolatrice-cop [ads]="ads" (result)="updateCop($event)" (isEdited)="isCopEdited($event)" (isEnabled)="enabledCopCheck($event)"></calcolatrice-cop>
          </ion-col>
        </ion-row> -->

        <ion-row>
          <ion-col col-4>
            <ion-label>Cer</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]="preventivo.Cer" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
            <calcolatore-cer [ads]="ads" (result)="updateCer($event)" (isEnabled)="enabledCheck($event)" (isEdited)="isEdited($event)"></calcolatore-cer>
            
          </ion-col>
        </ion-row>
        
        <ion-row>
          <ion-col col-4>
            <ion-label>Cvv</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]="preventivo.Cvv" (ionChange)="aggiornaTotale()" disabled="false"></ion-input>
            <calcolatore-cvv [ads]="ads" (result)="updateCvv($event)" (isEnabled)="enabledCvvCheck($event)" (isEdited)="isCvvEdited($event)"></calcolatore-cvv>
            
          </ion-col>
        </ion-row>
        <ion-row>
          <ion-col col-4>
            <ion-label>Altre Spese</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]="preventivo.AltreSpese" (ionChange)="aggiornaTotale()"></ion-input>
          </ion-col>
        </ion-row>
        
        <ion-row>
          <ion-col col-4>
            <ion-label>Totale</ion-label>
          </ion-col>
          <ion-col col-8>
            <ion-input type="number" [(ngModel)]="preventivo.Totale" disabled="true"></ion-input>
          </ion-col>
        </ion-row>  

      </ion-grid>

    <div>
        <button class="btn_preventivatore" ion-button (click)="conferma_Preventivo()">Conferma</button> 
        <button class="btn_preventivatore" ion-button color="danger" (click)="reset()">Reset</button> 
    </div>

    </ion-slide>

  </ion-slides>
</div>
